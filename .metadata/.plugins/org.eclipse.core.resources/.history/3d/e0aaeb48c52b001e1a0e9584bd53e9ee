package com.kn.patterns;

public class Triangle {

	public static void main(String[] args) {
		for(int i=1;i<=5; i++) {
			for (int j=1; j<=5; j++) {
				if(j<=i) {
					System.out.print("*");
					if(j>=3) {
						j=-(i-1);
					}
				}else {
					System.out.print(" ");
				}
			}
			System.out.println();
		}

	}

}
