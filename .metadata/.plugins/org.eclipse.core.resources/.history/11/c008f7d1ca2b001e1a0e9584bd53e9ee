package com.kn.patterns;

public class Triangle {

	public static void main(String[] args) {
//		regular();
		reverse();
	}

	static void creregular() {
		for (int i = 1; i <= 9; i++) {
			for (int j = 1; j <= 9; j++) {
				if (i <= 5) {
					if (j <= i) {
						System.out.print(j + " ");
					}

				} else if (i > 5) {
					if (j <= 10 - i) {
						System.out.print(j + " ");
					}
				} else {
					System.out.print(" ");
				}
			}
			System.out.println();
		}
	}

	static void reverse() {
		for (int i = 9; i >= 1; i--) {
			for (int j = 1; j <= 9; j++) {
				if (i <= 5) {
					if (j <= i) {
						System.out.print(j + " ");
					}

				} else if (i > 5) {
					if (j <= 10 - i) {
						System.out.print(j + " ");
					}
				} else {
					System.out.print(" ");
				}
			}
			System.out.println();
		}
	}

}
