package com.kn.patterns;

public class Triangle {

	public static void main(String[] args) {
		for (int i = 1; i <= 5; i++) {
			for (int j = 1; j <= 5; j++) {
				if (i<=3) {
					if(j<=i) {
					System.out.print("*");
					}
				 } else if(j>3){
					 if(j<= 6-i) {
							System.out.print("*");
					 }
				 }else {
					System.out.print(" ");
				}
			}
			System.out.println();
		}

	}

}
